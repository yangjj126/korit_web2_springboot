<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
0. xml과 mapper interface를 연결해 주세요
1. ResultMap 정의를 해주세요(Post)
2. select 작성 - findAllPosts 완성
3. select 작성 - findPostById 완성(리턴타입이 옵셔널이라도,
resultMap으로 지정해주면 됩니다.) -> interface의 시그니처를 따라감
-> 인터페이스의 메서드 시그니처를 인식해서 알아서 옵셔널로 포장해서 리턴해준다.
-->
<mapper namespace="com.koreait.spring_boot_study.repository.mapper.PostMapper">

    <!-- PostJdbcRepo에 있는 rsToPost 메서드와 동일한 역할 -->
    <resultMap id="postMap" type="com.koreait.spring_boot_study.entity.Post">
        <!-- PK 매핑 -->
        <id property="id" column="id" />
        <!-- 기본 필드 매핑(기본자료형) -->
        <result property="title" column="title" />
        <result property="content" column="content" />
        <!-- 타 엔티티 필드 매핑 (1:N, N:1..)-->
        <collection property="comments" resultMap="commentMap" javaType="list" />
    </resultMap>
    <resultMap id="commentMap" type="com.koreait.spring_boot_study.entity.Comment">
        <id property="commentId" column="comment_id" />
        <result property="commentContent" column="comment_content" />
    </resultMap>

    <select id="findAllPosts" resultMap="postMap">
        select
        id,
        title,
        content
        from
        post
    </select>

    <!--parameterType을 명시적으로 적어줄 수 있다.-->
    <select id="findPostById"
            resultMap="postMap"
            parameterType="int"
    >
        SELECT
        id,
        title,
        content
        FROM
        post
        WHERE
        id = #{id}
    </select>

    <insert id="insertPost">
        insert into
        post (title, content)
        values
        (#{title}, #{content})
    </insert>
    <delete id="deletePostById">
        delete from
        post
        where
        id = #{id}
    </delete>
    <update id="updatePost">
        update
        post
        set
        title = #{title},
        content = #{content}
        where
        id = #{id}
    </update>

    <select id="searchDetailPosts" resultMap="postMap">
        select
        id,
        title,
        content
        from
        post
        where
        1=1
        <if test="titleKeyword != null and titleKeyword != ''">
            and title like CONCAT('%', #{titleKeyword} ,'%')
        </if>
        <if test="contentKeyword != null and contentKeyword != ''">
            and content like CONCAT('%', #{contentKeyword}, '%')
        </if>
        order by
        id
    </select>

    <select id="findPostWithComments" resultMap="postMap">
        select
        p.id,
        p.title,
        p.content,
        c.comment_id,
        c.comment_content
        from
        post p
        left join comment c
        on p.id = c.post_id
        where
        p.id = #{id}
        order by
        c.comment_id
    </select>

    <insert id="insertPosts">
        insert into
            post ( title, content )
        values
            <foreach collection="posts" item="post" separator=",">
                (#{post.title} , #{post.content})
            </foreach>
    </insert>
</mapper>