<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD(https://mybatis.org//DTD) Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
0. xml과 mapper interface를 연결해주세여
1. ResultMap 정의를 해주세요
2. select 작성 - findAllPosts 완성하기
3. select 작성 - findPostById 완성(리턴타입이 옵셔널이라도,
resultMap 으로 지정해주면 됩니다.) -> interface의 시그니처를 따라감
-> 인터페이스의 메서드 시그니처를 인식해서 알아서, 옵셔널로 포장해서 리턴해준다

resultMap은 resultMap은 SQL 쿼리의 실행 결과를
자바 객체(Java Object)로 효과적으로 매핑하는 역할을 담당합니다.
-->

<mapper namespace="com.koreait.spring_boot_study.repository.mapper.PostMapper">
    <!--PostJdbc에 있는 rsToPost 메서드와 동일한 역할 -->
    <resultMap id="postMap" type="com.koreait.spring_boot_study.entity.Post">
        <!--PK 매핑-->
        <id property="id" column="id"/>
        <!-- 기본 필드 매핑(기본자료형)-->
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <!-- 타 엔터티 필드 매핑 (1:N, N:1..)-->
        <collection property="comments" resultMap="commentMap" javaType="list"/>
    </resultMap>
    <resultMap id="commentMap" type="com.koreait.spring_boot_study.entity.Comment">
        <id property="commentId" column="comment_id"/>
        <result property="commentContent" column="comment_content"/>
    </resultMap>


    <select id="findAllPosts" resultMap="postMap">
        select
            post_id,
            post_title,
            post_content
        from
            post
    </select>


    <!-- parameterType을 명시적으로 적어줄 수 있어야 한다 -->
    <select id="findPostById"
            resultMap="postMap"
            parameterType="int">
        select
            id,
            title,
            content
        from
            post
        where
            id = #{id}
    </select>

    <insert id="insertPost">
        insert into
            post(title, content)
        values
            (null, #{title} . #{content})
    </insert>

    <delete id="deletePostById">
        delete from post
        where post_id = #{id}
    </delete>

    <update id="updatePost">
        update post
        set post_title = #{title} , post_content = #{content}
        where post_id = #{id}
    </update>

    <select id="searchDetailPosts" resultMap="postMap">
        select
            id,
            title,
            content
        from
            post
        where
            1 = 1
        <if test = "titleKeyword != null and titleKeyword != '' ">
            and title like CONCAT('%', #{titleKeyword}, '%')
        </if>
        <if test="contentKeyword != null and contentKeyword != ''">
            and content like CONCAT('%', #{contentKeyword}, '%')
        </if>
    order by5
        id
    </select>

    <select id="findPostWithComments" resultMap="postMap" parameterType="int">
        select
            p.post_id,
            p.title,
            p.content,
            c.comment_id,
            c.comment_content
        from
            post p
        left join comment c
             on p.id = c.post_id
        where
            p.id = #{id}
        order by
            c.comment_id
    </select>
</mapper>